<div class="row">
  <div class="col-md-12">
    <h1>{{restaurant.name}}</h1>
    <p>[{{restaurant.Category.name}}]</p>
  </div>
  <div class="col-md-4 ">
    <div class="restaurant-image position-relative">
      <img class="img-fluid rounded" src="{{restaurant.image}}">
      <div class="save-like-buttons d-flex">
        <!--Favorite buttons-->
        {{#if restaurant.isFavorited}}
        <form action="/favorite/{{restaurant.id}}?_method=DELETE" method="POST" class="favorite-form">
          <button type="submit" class="btn"><i class="fas fa-bookmark text-warning"></i></button>
        </form>
        {{else}}
        <form action="/favorite/{{restaurant.id}}" method="POST" class="favorite-form">
          <button type="submit" class="btn favorite-btn" data-toggle="tooltip" data-placement="bottom"
            title="Save it"><i class="far fa-bookmark"></i></button>
        </form>
        {{/if}}
        <!--Like buttons-->
        {{#if restaurant.isLiked}}
        <form action="/like/{{restaurant.id}}?_method=DELETE" method="POST" class="like-form">
          <button class="btn" type="submit"><i class="fas fa-heart text-danger"></i></button>
        </form>
        {{else}}
        <form action="/like/{{restaurant.id}}" method="POST" class="like-form">
          <button class="btn like-btn"><i class="far fa-heart" data-toggle="tooltip" data-placement="bottom"
              title="Like it"></i></button>
        </form>
        {{/if}}
      </div>
    </div>
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Opening Hour:</strong> {{restaurant.opening_hours}}</li>
        <li><strong>Tel:</strong> {{restaurant.tel}}</li>
        <li><strong>Address:</strong> {{restaurant.address}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p>{{restaurant.description}}</p>
    <a href="/restaurants/{{restaurant.id}}/dashboard" class="btn btn-info">Dashboard</a>
  </div>
  <hr>
</div>

<!--Show comments-->
<br /><br />
<h3>所有評論：</h3>
{{#each restaurant.Comments}}
{{#if ../user.isAdmin}}
<form action="/comments/{{this.id}}?_method=DELETE" method="POST" style="float: right;">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
{{/if}}
<blockquote class="blockquote mb-0">
  <h4><a href="/users/{{this.User.id}}">{{this.User.name}}</a></h4>
  <p>{{this.text}}</p>
  <footer class="blockquote-footer">{{moment this.createdAt}}</footer>
</blockquote>
<hr />
{{/each}}

<!--Post comments-->
<form action="/comments" method="POST">
  <div class="form-group">
    <label for="text">留下評論：</label>
    <textarea class="form-control" id="text" name="text" rows="3"></textarea>
  </div>
  <input type="hidden" name="restaurantId" value="{{restaurant.id}}" />
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="javascript:history.back()">回上一頁</a>