<section class="row mt-5">
  <div class="auth-form-container shadow-sm">
    <div class="cover-photo">
      <div class="overlay"></div>
      <h2>Sign In</h2>
    </div>
    <form class="form-signin bg-white" action="/signin" method="POST">
      <div class="form-group">
        <label for="inputEmail" class="m-0 text-secondary"><small>User Email</small></label>
        <input type="text" name="email" class="form-control" required autofocus>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="m-0 text-secondary"><small>Password</small></label>
        <input type="password" name="password" class="form-control" required>
      </div>
      <div class="buttons log-in-buttons text-center">
        <button class="btn mx-2 login w-50" type="submit">Log In</button>
        <a href="/signup" class="btn signup w-50 mt-1">Sign Up</a>
      </div>
    </form>
  </div>
</section>